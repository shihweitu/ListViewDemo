<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_progress_height"
    android:layout_marginTop="@dimen/list_item_gap"
    android:background="@color/color_list_item_bg" >

    <ProgressBar
        android:id="@+id/progress_item"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/content_padding" />

    <TextView
        android:id="@+id/retry_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/retry_message"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:visibility="invisible" />

</RelativeLayout>